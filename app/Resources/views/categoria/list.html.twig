{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {% include 'partials/navbar.html.twig' %}
        {% include 'partials/flash.html.twig' %}
        <div id="products" class="row list-group">

			{% if categories | length <= 0 %}
			    <p>
			    	Nenhuma categoria encontrada.
			    </p>
			{% endif %}

            {% for category in categories %}
            	<div class="item  col-xs-4 col-lg-4">
	                <div class="thumbnail">
	                    <div class="caption">
	                        <h4 class="group inner list-group-item-heading">
	                            {{ category.nomeCategoria }}</h4>
	                        <div class="row">
	                            <div class="col-xs-12 col-md-6">
		                            <a class="btn btn-info" href="{{ path('category_edit', {'idCategoriaPlanejamento': category.idCategoriaPlanejamento}) }}">Editar</a>
		                            <a class="btn btn-danger" data-delete-entity data-delete-url="{{ path('category_delete', {'idCategoriaPlanejamento': category.idCategoriaPlanejamento}) }}" href="#">Deletar</a>
		                        </div>
	                        </div>
	                    </div>
	                </div>
	            </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
